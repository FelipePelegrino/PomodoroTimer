<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardState"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_stage_height"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/large_margin"
        app:cardCornerRadius="@dimen/large_radius"
        app:strokeWidth="@dimen/item_stroke_width"
        tools:backgroundTint="@color/colorFocusSecondary"
        tools:strokeColor="@color/colorFocus">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/medium_horizontal_margin"
            android:layout_marginVertical="@dimen/small_vertical_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@drawable/ic_focus" />

            <TextView
                android:id="@+id/textState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_vertical_margin"
                android:textAlignment="center"
                android:textSize="@dimen/text_stage"
                tools:text="Focus"
                tools:textColor="@color/colorFocus" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>